    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "graphql": "^16.12.0",
    "graphql-request": "^7.4.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
